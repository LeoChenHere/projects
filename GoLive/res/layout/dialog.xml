<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:background="@color/orange"
    android:layout_gravity="center"
    android:layout_width="250dip"
    android:layout_height="wrap_content" >
    <RelativeLayout android:id="@+id/TextArea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <TextView
	        android:id="@+id/Title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=" AndroidPeople.com "
	        android:layout_centerHorizontal="true"
	        android:textColor="#000"
	        android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/Message"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/Title"
	        android:layout_centerHorizontal="true"
	        android:gravity="center"
	        android:textColor="#000"
	        android:text="Custom Dialog Example By AndroidPeople.com" />
    </RelativeLayout>
    
    <RelativeLayout android:id="@+id/GoneArea"
        android:layout_below="@id/TextArea"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    
        <EditText android:id="@+id/InputET"
	        android:visibility="gone"
	        android:layout_margin="10dip"
	        android:layout_width="fill_parent"
	        android:textSize="16dip"
	        android:layout_height="40dip"/>
        
        <ImageView android:id="@+id/ImageIV"
	        android:visibility="gone"
	        android:layout_margin="10dip"
	        android:layout_width="200dip"
	        android:layout_height="200dip"/>
        
    </RelativeLayout>
    
    <RelativeLayout android:id="@+id/ButtonArea"
        android:layout_below="@id/GoneArea"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
	        android:id="@+id/Yes"
	        android:layout_width="64dip"
	        android:layout_height="32dip"
	        android:layout_margin="10dip"
	        android:background="@drawable/b_button"
	        android:text="Start" />

	    <Button
	        android:id="@+id/No"
	        android:layout_toRightOf="@id/Yes"
	        android:layout_width="64dip"
	        android:layout_height="32dip"
	        android:layout_margin="10dip"
	        android:background="@drawable/g_button"
	        android:text="Cancel" />
    </RelativeLayout>
    
    

</RelativeLayout> 