<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_gravity="center"
    android:layout_width="200dip"
    android:layout_height="fill_parent" >
    <RelativeLayout android:id="@+id/TextArea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <TextView
	        android:id="@+id/Title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=" AndroidPeople.com "
	        android:layout_centerHorizontal="true"
	        android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/Content"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/Title"
	        android:layout_centerHorizontal="true"
	        android:gravity="center"
	        android:text="Custom Dialog Example By AndroidPeople.com" />
    </RelativeLayout>
    
    <RelativeLayout android:id="@+id/ButtonArea"
        android:layout_below="@id/TextArea"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
	        android:id="@+id/Yes"
	        android:layout_width="64dip"
	        android:layout_height="32dip"
	        android:layout_margin="10dip"
	        android:background="@drawable/start"
	        android:text="Start" />

	    <Button
	        android:id="@+id/No"
	        android:layout_toRightOf="@id/Yes"
	        android:layout_width="64dip"
	        android:layout_height="32dip"
	        android:layout_margin="10dip"
	        android:background="@drawable/cancel"
	        android:text="Cancel" />
    </RelativeLayout>
    
    

</RelativeLayout> 