<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout android:id="@+id/evenlistLayout" 
	android:layout_width="fill_parent" android:layout_height="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<RelativeLayout android:id="@+id/bannerLayout"
		android:background="@drawable/banner_content_2"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true">
		
		<ImageButton android:id="@+id/back2List"
			android:background="#00000000" 
			android:src="@drawable/bt_back"
			android:paddingLeft="3dp"
			android:layout_centerVertical="true" 
			android:layout_alignParentLeft="true"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		
		<TextView android:id="@+id/title" 
			android:layout_centerVertical="true" 
			android:layout_centerHorizontal="true"
			android:layout_marginRight="50sp"
			android:textSize="20dip"
			android:layout_height="wrap_content" android:layout_width="wrap_content" />
			
		<ProgressBar 
	        android:id="@+android:id/progress_small_title"
        	style="?android:attr/progressBarStyleSmallTitle"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
	        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	        
	    
		<ImageButton android:id="@+id/fullText"
			android:background="#00000000" 
			android:src="@drawable/bt_fulltext"
			android:paddingRight="3dp"
			android:layout_centerVertical="true" 
			android:layout_alignParentRight="true"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		
	</RelativeLayout>
	
	
	<RelativeLayout android:id="@+id/itemLayout" 
		android:layout_below="@id/bannerLayout" 
		android:layout_centerHorizontal="true"
		android:background="@drawable/bk_menu"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		
		<ImageView android:id="@+id/itemView"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:layout_width="fill_parent" android:layout_height="fill_parent" />
		
		<TextView android:id="@+id/itemTitle" 
			android:background="@drawable/bar_cnt_tool"
			android:layout_alignParentBottom="true" 
			android:layout_centerHorizontal="true"
			android:gravity="center"
			android:textSize="20dip"
			android:layout_width="fill_parent" android:layout_height="wrap_content" />
		
	
	</RelativeLayout>
	
	
</RelativeLayout>