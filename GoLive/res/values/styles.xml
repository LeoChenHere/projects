<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleLayout">
		<item name="android:background">@drawable/background</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
	</style>
	
	<style name="StyleShadow">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>
    
    <style name="StyleTitle" parent="StyleShadow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:background">@drawable/back_title</item>
    </style>
    
    <style name="StyleLabel" parent="StyleShadow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_label</item>
        <item name="android:background">@null</item>
    </style>
        
    <style name="StyleInput" parent="StyleShadow">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_label</item>
        <item name="android:background">@drawable/back_input</item>
    </style>
    
    <style name="StyleBlueButton" parent="StyleShadow">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_label</item>
        <item name="android:background">@drawable/b_button</item>
    </style>
    
    <style name="StyleBlueButtonClicked" parent="StyleShadow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_label</item>
        <item name="android:background">@drawable/b_button</item>
    </style>
    
    <style name="StyleGreenButton" parent="StyleShadow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_label</item>
        <item name="android:background">@drawable/g_button</item>
    </style>
    <style name="StyleGreenButtonClicked">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_label</item>
        <item name="android:background">@drawable/g_button</item>
    </style>
    
</resources>